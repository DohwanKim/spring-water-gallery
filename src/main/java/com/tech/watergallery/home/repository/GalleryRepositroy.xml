<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tech.watergallery.home.repository.GalleryRepository">
    <resultMap id="entity" type="com.tech.watergallery.home.entity.Gallery" autoMapping="true">
        <id property="id" column="id" />
    </resultMap>
    <insert id="create" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO `gallery`
        SET
            `title` = #{title},
            `description` = #{description},
            `content` = #{content},
            `completed` = #{completed},
            `created_at` = NOW(),
            `updated_at` = NOW()
    </insert>
    <select id="find" resultMap="entity">
        SELECT *
        FROM `gallery`
        WHERE `id` = #{id}
    </select>
    <update id="update">
        UPDATE `gallery`
        SET
            `title` = #{title},
            `description` = #{description},
            `content` = #{content},
            `completed` = #{completed},
            `updated_at` = NOW()
        WHERE id = #{id}
    </update>
</mapper>
